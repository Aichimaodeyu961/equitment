<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="equitment.dao.UserDao">
    <resultMap id="userMap" type="user">
        <id property="user_id" column="user_id"/>
        <result column="user_name" property="user_name"/>
        <result property="password" column="password"/>
        <result property="createDate" column="createDate"/>
        <result property="role_id" column="role_id"/>
        <result property="userstatus_id" column="userstatus_id"/>
        <association property="role" javaType="role" column="role_id" select="equitment.dao.RoleDao.findRoleByID" fetchType="lazy"/>
        <association property="userStatus" javaType="userStatus" column="userStatus_id" select="equitment.dao.UserStatusDao.findUserStatusByID" fetchType="lazy"/>
    </resultMap>

    <select id="login" resultType="user" parameterType="user">
        select * from USER
        where username = #{user.username}
        and password = #{user.password}
    </select>

    <select id="findAll" resultMap="userMap" parameterType="user">
        select user_id,user_name,password,createDate,role_id,userstatus_id
        from user
        <if test="user!=null">

            <where>
                <if test="user.username!=null and user.username != '' ">
                    and username like '%'+${user.username}+'%'
                </if>
                <if test="user.role_id!=null">
                    and role_id = #{user.role_id}
                </if>
                <if test="user.userstatus_id != null ">
                    and userstatus_id = #{user.userstatus_id}
                </if>
            </where>
        </if>
    </select>

    <select id="findUserByID" parameterType="Integer" resultMap="userMap">
        select user_id,user_name,password,createDate,role_id,userstatus_id
        from user
        where userid = #{userid}
    </select>

    <delete id="deleteUser" parameterType="Integer">
        delete from user
        where userid = #{userid}
    </delete>

    <insert id="addUser" parameterType="user">
        insert into user(user_id,user_name,password,createDate,role_id,userStatus_id)
        values(#{user.user_id},#{user.user_name},#{user.password},#{user.createDate},#{user.role_id},#{user.userStatus_id})
    </insert>

    <update id="updateUser" parameterType="user">
        update user
        <set>
            <if test="user.username!=null and user.username!= '' ">
                username = #{user.username},
            </if>
            <if test="user.password!=null and user.password!='' ">
                password = #{user.password},
            </if>
            <if test="user.role_id != null ">
                role_id = #{user.role_id},
            </if>
            <if test="user.userStatus_id!=null">
                userStatus_id = #{user.userStatus_id},
            </if>
        </set>
        where user_id = #{user.user_id}
    </update>

</mapper>